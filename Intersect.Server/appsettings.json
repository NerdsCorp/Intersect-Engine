{
	"AllowedHosts": "*",
	"Api": {
		"AllowedNonHttpOnlyCookies": [
			"session-expires"
		],
		"Enabled": true,
		"StaticFilePaths": [
			{
				"SourcePath": "wwwroot"
			}
		]
	},
	"ConnectionStrings": {
		"Game": "Data Source=resources/gamedata.db",
		"Identity": "Data Source=resources/identity.db",
		"Logging": "Data Source=resources/logging.db",
		"Player": "Data Source=resources/playerdata.db"
	},
	"DetailedErrors": true,
	"Kestrel": {
		"AddServerHeader": false,
		"AllowResponseHeaderCompression": true,
		"DisableStringReuse": false,
		"Limits": {
			"MaxRequestBodySize": 524288000,
			"KeepAliveTimeout": "00:10:00",
			"RequestHeadersTimeout": "00:10:00",
			"MinRequestBodyDataRate": {
				"BytesPerSecond": 100,
				"GracePeriod": "00:10:00"
			}
		}
	},
	"Logging": {
		"Common": {
			"MinimumLevel": {
				"Default": "Warning",
				"Override": {
					"Intersect": "Information",
					"Microsoft": "Warning",
					"System": "Warning"
				}
			}
		}
	},
	"UpdateServer": {
		"Enabled": true,
		"AssetRoot": "assets"
	}
}
